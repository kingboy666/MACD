# 必填 - OKX API 凭证
OKX_API_KEY=your_api_key
OKX_SECRET_KEY=your_secret_key
OKX_PASSPHRASE=your_passphrase

# 日志与调试
LOG_LEVEL=INFO
DEBUG_MODE=false

# 刷新与节流控制
SCAN_INTERVAL=2              # 主循环刷新频率（秒）
SYMBOL_LOOP_DELAY=0.3        # 每个币种之间的微延时（秒）
OKX_API_MIN_INTERVAL=1.2     # 私有接口最小调用间隔（秒）
SET_LEVERAGE_ON_START=true   # 启动时是否逐币设置杠杆（false可减少启动阶段调用）

# 限频退避策略
MAX_RETRIES=3        # 50011时的最大重试次数
BACKOFF_BASE=0.8     # 指数退避基础秒数
BACKOFF_MAX=3.0      # 单次退避最大等待秒数

# 下单资金控制
# 固定每次下单的名义金额（USDT）；不填则按余额平均分配到所有币种并乘以因子
TARGET_NOTIONAL_USDT=
# 平均分配后的放大因子（例如余额100U，11币种，分配约9.09U，*50 => 454.5U 名义）
ORDER_NOTIONAL_FACTOR=50
# 单币资金下限与上限（USDT）；下限统一为 MIN_NOTIONAL_FLOOR
MIN_NOTIONAL_FLOOR=1.0
MAX_PER_SYMBOL_USDT=

# 风险预算与费用
MAX_RISK_PCT=0.01            # 单笔风险占余额比例(默认1%)
TAKER_FEE_RATE=0.0005        # Taker费率
MARGIN_SAFETY_BUFFER=0.003   # 保证金费用缓冲
MIN_AVAILABLE_FLOOR=0.50     # 账户可用余额下限（USDT）
MIN_MARGIN_FLOOR=0.05        # 单笔保证金下限（USDT）

# 技术指标与风控参数
ATR_SL_N=2.0           # SL倍数
ATR_TP_M=3.0           # TP倍数
ATR_PERIOD=14          # ATR周期
ADX_PERIOD=14          # ADX周期
ADX_MIN_TREND=25       # 最小趋势阈值
ATR_RATIO_THRESH=0.004 # 低波动提醒阈值

# API策略
USE_OKX_NATIVE_ONLY=false

# OCO 与止盈止损策略
ONLY_OCO_CLOSE=1                 # 默认仅首次挂整仓TP/SL，不主动更新
ALLOW_OCO_UPDATE=1               # 是否允许更新OCO（冷却+改善达标时才更新）
TP_SL_REFRESH_INTERVAL=300       # OCO重挂冷却时间（秒）
MIN_OCO_SL_IMPROVE_TICKS=3       # 止损改善阈值（tick数量）
TPSL_ACTIVATION_GRACE_SEC=30     # 成交后TPSL激活宽限（秒）

# 主控与TopK
SMART_CONTROLLER=1
TOP_K_ACTIVE=3